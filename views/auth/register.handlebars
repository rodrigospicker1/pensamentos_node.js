<div class="login-box">
  <h2>Cadastrar</h2>
  {{#if messages.error}}
    <div class="erro">
      {{messages.error}}
    </div>
  {{/if}}
  <form method="POST" action="/register">
    <div class="user-box">
      <input type="text" name="name" required>
      <label>Username</label>
    </div>
    <div class="user-box">
      <input name="email" required>
      <label>E-mail</label>
    </div>
    <div class="user-box">
      <input type="password" name="password" required>
      <label>Senha</label>
    </div>
    <div class="user-box">
      <input type="password" name="confirmpassword" required>
      <label>Confirmação da senha</label>
    </div>
    <div class="user-box">
      <a href="/login" style="text-decoration: underline;color:#fff;letter-spacing:3px">Já tenho conta!</a>
    </div>
    <button type="submit">
      <span></span>
      <span></span>
      <span></span>
      <span></span>
      Cadastrar
    </button>
  </form>
</div>